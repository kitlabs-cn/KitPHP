{% extends '@KitWeb/layout.html.twig' %} {% block content %}
<div class="container">
	<div class="line">
		<div class="xs6 xm4 xs3-move xm4-move">
			<br /> <br />
			<br /> <br />
			<form action="{{ path('kit_web_login_check') }}" method="post" >
				<div class="panel">
					<div class="panel-head">
						<strong>登录</strong>
					</div>
					{% if error %}
                        <div class="alert alert-red margin">
                            <span class="close rotate-hover"></span>
                            <span>{{ error.messageKey|trans(error.messageData) }}</span>
                        </div>
                    {% endif %}
					<div class="panel-body" style="padding: 30px;">
						<div class="form-group">
							<div class="field field-icon-right">
								<input type="text" class="input" name="email" placeholder="登录邮箱"
									data-validate="required:请填写邮箱,length#>=5:邮箱长度不符合要求" value="{{ last_username }}"/> <span
									class="icon icon-user"></span>
							</div>
						</div>
						<div class="form-group">
							<div class="field field-icon-right">
								<input type="password" class="input" name="password"
									placeholder="登录密码"
									data-validate="required:请填写密码,length#>=6:密码长度不符合要求" /> <span
									class="icon icon-key"></span>
							</div>
						</div>
					</div>
					<div class="panel-foot text-center">
						<button class="button button-block bg-main text-big">立即登录</button>
					</div>
				</div>
			</form>
		</div>
	</div>
</div>
{% endblock %}
