{% extends '@KitWeb/User/base.html.twig' %} 
{% block content_right %}
<div class="panel admin-panel">
		<div class="panel-head">
			<strong>公示公告</strong>
		</div>
		{% if pagination is defined and pagination is not empty %}
		<table class="table table-hover">
			<tr>
				<th width="45">选择</th>
				<th width="*">标题</th>
				<th width="*">案件编号</th>
				<th width="*">公司名称</th>
				<th width="160">时间</th>
				<th width="200">操作</th>
			</tr>
			{% for item in pagination %}
			<tr>
				<td><input type="checkbox" name="id" value="1" /></td>
				<td>{{ item.title }}</td>
				<td>{{ item.matter }}</td>
				<td>{{ item.company }}</td>
				<td>{% if item.createAt %}{{ item.createAt|date('Y-m-d H:i:s') }}{% endif %}</td>
				<td>
				    <a class="button border-green button-little" href="{{ path('kit_user_notice_show', { 'id': item.id }) }}">查看</a>
				    <a class="button border-yellow button-little" href="{{ path('kit_user_appeal', { 'id': item.id }) }}">申诉陈辩</a>
			</tr>
			{% endfor %}
		</table>
		{{ knp_pagination_render(pagination,'pagination.html.twig') }}
		{% endif %}
	</div>
{% endblock %}