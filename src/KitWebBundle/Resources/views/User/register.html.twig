{% extends '@KitWeb/layout.html.twig' %} {% block content %}
<div class="container">
	<div class="line">
		<div class="xs6 xm4 xs3-move xm4-move">
			<br /> <br />
			<br /> <br />
			{{ form_start(form) }}
				<div class="panel">
					<div class="panel-head">
						<strong>用户注册</strong>
					</div>
					<div class="panel-body" style="padding: 30px;">
					    {% for error in errors %}
                        <div class="alert alert-red margin">
                            <span class="close rotate-hover"></span>
                            <span>{{ error }}</span>
                        </div>
                        {% endfor %}
						<div class="form-group">
							<div class="field field-icon-right">
							{{ form_row(form.name, {'attr': {'class': 'input', 'placeholder': '用户名', 'data-validate': 'required:请填写用户名,length#>=5:邮箱长度不符合要求'}}) }}
							</div>
						</div>
						<div class="form-group">
							<div class="field field-icon-right">
							{{ form_row(form.email, {'attr': {'class': 'input', 'placeholder': '邮箱', 'data-validate': 'required:请填写邮箱,length#>=5:邮箱长度不符合要求'}}) }}
							</div>
						</div>
						<div class="form-group">
							<div class="field field-icon-right">
							{{ form_row(form.plainPassword.first, {'attr': {'class': 'input', 'placeholder': '输入密码', 'data-validate': 'required:请填密码,length#>=5:邮箱长度不符合要求'}}) }}
							</div>
						</div>
						<div class="form-group">
							<div class="field field-icon-right">
							{{ form_row(form.plainPassword.second, {'attr': {'class': 'input', 'placeholder': '确认密码', 'data-validate': 'required:请确认密码,length#>=5:邮箱长度不符合要求'}}) }}
							</div>
						</div>
					</div>
					<div class="panel-foot text-center">
						<button class="button button-block bg-main text-big">立即注册</button>
					</div>
				</div>
			{{ form_end(form) }}
		</div>
	</div>
</div>
{% endblock %}
