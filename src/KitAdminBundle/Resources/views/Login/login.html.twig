{% extends 'base.html.twig' %}
{% block body %}
<div class="container">
			<div class="line">
				<div class="xs6 xm4 xs3-move xm4-move">
					<br />
					<br />
					<div class="media media-y">
						<a href="" target="_blank"><img src="{{ asset('static/images/logo_back.png') }}" class="radius" alt="后台管理系统" /></a>
					</div>
					<br />
					<br />
					<form action="{{ path('kit_admin_login_check') }}" method="post">
						<div class="panel">
							<div class="panel-head"><strong>登录水利监督系统</strong></div>
							<div class="panel-body" style="padding:30px;">
							     {% if error %}
							     <div class="form-group">
                                    <div class="alert alert-red">
                                        <span class="close rotate-hover"></span>
                                        <span>{{ error.messageKey|trans(error.messageData) }}</span>
                                    </div>
                                </div>
                                {% endif %}
							    {% if errors is defined and errors is not empty%}
							    
							         {% for error in errors %}
							         <div class="alert alert-red">
							             <span class="close rotate-hover"></span><span> {{ error }} </span>
							         </div>
							         {% endfor %}
							    
							    {% endif %}
								<div class="form-group">
									<div class="field field-icon-right">
									    <input type="text" class="input" name="_username" placeholder="登录账号" data-validate="required:请填写账号,length#>=5:账号长度不符合要求" />
										<span class="icon icon-user"></span>
									</div>
								</div>
								<div class="form-group">
									<div class="field field-icon-right">
									    <input type="password" class="input" name="_password" placeholder="登录密码" data-validate="required:请填写密码,length#>=6:密码长度不符合要求" />
										<span class="icon icon-key"></span>
									</div>
								</div>
							</div>
							<div class="panel-foot text-center">
							     <button class="button button-block bg-main text-big">立即登录后台</button>
							</div>
						</div>
                    </form>
				</div>
			</div>
		</div>
{% endblock %}
{% block javascripts %}
    {{ parent() }}
    <script>
    $(function(){
        $('.passcode').on('click', function(){
            var src = $(this).attr('src');
            $(this).attr('src', src + '&t=' + Date.parse(new Date()));
        });
     })
    </script>
{% endblock %}