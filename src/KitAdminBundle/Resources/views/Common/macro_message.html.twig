{% macro flash_messages() %}
    {% for type, flashMessages in app.session.flashbag.all() %}
        {% for flashMessage in flashMessages %}
            <div class="alert alert-yellow">
                <span class="close"></span>
                <strong>提示：</strong>
                {{ flashMessage|raw }}
            </div>
        {% endfor %}
    {% endfor %}
{% endmacro %}